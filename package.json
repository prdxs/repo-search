{
  "name": "api-routes-apollo-server-and-client",
  "version": "1.0.0",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "type-check": "tsc --pretty --noEmit",
    "format": "prettier --write **/*.{js,ts,tsx}",
    "lint": "eslint . --ext ts --ext tsx --ext js",
    "fetch-schema": "apollo-codegen introspect-schema https://api.github.com/graphql --header \"Authorization: Bearer 7aac60615b5f45fbbd1014a4594aa7ddde8d5fa9\" --output schema.json",
    "generate-typings": "graphql-codegen --config codegen.yml"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run type-check"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "yarn lint",
      "yarn format"
    ]
  },
  "dependencies": {
    "@apollo/react-common": "^3.1.4",
    "@apollo/react-hooks": "^3.1.5",
    "@material-ui/core": "^4.10.2",
    "apollo-cache-inmemory": "^1.6.6",
    "apollo-client": "^2.6.10",
    "apollo-link-http": "^1.5.17",
    "apollo-link-schema": "^1.2.5",
    "apollo-server-micro": "^2.14.2",
    "apollo-utilities": "^1.3.2",
    "graphql": "^14.0.2",
    "graphql-tag": "2.10.3",
    "next": "latest",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "styled-components": "^5.1.1"
  },
  "license": "ISC",
  "devDependencies": {
    "@graphql-codegen/cli": "1.15.4",
    "@graphql-codegen/typescript": "1.15.4",
    "@graphql-codegen/typescript-operations": "1.15.4",
    "@types/node": "^14.0.14",
    "@types/react": "^16.9.41",
    "@types/styled-components": "^5.1.0",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "apollo-codegen": "^0.20.2",
    "babel-jest": "^26.1.0",
    "babel-plugin-styled-components": "^1.10.7",
    "eslint": "^7.3.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-react": "^7.20.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "typescript": "^3.9.5"
  }
}
